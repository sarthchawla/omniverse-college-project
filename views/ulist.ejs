<!DOCTYPE html>
<html lang="en">

    <head>
        <!-- contains script and css source -->
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="bootstrap.min.css">

        <!-- jQuery library -->
        <script src="jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="bootstrap.min.js"></script>
        <script src="script.js"></script>
        <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- <link href="login_files/signin.css" rel="stylesheet"> -->
        <link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" rel="stylesheet">
        <style>
            .content {
                background-color: #eeeeee;
            }

            .navbar {
                margin-bottom: 0;
                border-radius: 0;
            }

            .sidebar {
                background-color: #91999d;
                position: relative;
                height: 100%;
                overflow: auto;
            }

            .row1 {
                /* jugad */
                height: 100vh;
                padding-top: 50px;
            }

            .sidebar a {
                display: block;
                color: black;
                padding: 16px;
                text-decoration: none;
            }

            .sidebar a.active {
                background-color: #4CAF50;
                color: white;
            }

            .sidebar a:hover:not(.active) {
                background-color: #555;
                color: white;
            }

            @media screen and (max-width: 767px) {
                .sidebar {
                    height: auto;
                    padding: 15px;
                }

                .row1.content {
                    height: auto;
                }
            }
        </style>
    </head>

    <body>
        <%- include('topbar', {dp: dp}) %>
        <div class="container-fluid text-center" style="padding:0px">
            <div class="row1 content">
                <%- include('side_menu', {type: myvar.roleoptions}) %>
                <div class="col-sm-10 container content" style="margin-top:40px;">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Phone</th>
                                <th>City</th>
                                <th>Status</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                $('#example').DataTable({
                    "serverSide": true,
                    "ajax": "/udata",
                });
            });
        </script>
    </body>

</html>